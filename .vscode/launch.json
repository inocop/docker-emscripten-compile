            "preLaunchTask": "sample_cmake",
            "program": "/opt/src/sample/build/Main",
            "args": [],
            "stopAtEntry": false,
            "cwd": "/opt/src/sample/build",
            "environment": [],
            "externalConsole": true,
            "pipeTransport": {
                "pipeCwd": "${workspaceRoot}",
                "pipeProgram": "docker",
                "pipeArgs": [
                    "exec", 
                    "-i", 
                    "docker_emscripten", 
                    "sh",
                    "-c"
